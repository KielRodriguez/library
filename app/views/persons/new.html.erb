<h1>New Person</h1>

<%= form_for :person, url: persons_path  do |f| %>
  <p>
    <%= f.label :first_name %><br>
    <%= f.text_field :first_name %>
  </p>
  <p>
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name %><br>
  </p>
  <p>
    <%= f.label :birthdate %><br>
    <%= f.text_field :birthdate %>
  </p>
  <p>
    <%= f.label :status %><br>
    <%= f.check_box :status %>
  </p>
  <p>
    <%= f.submit("Create") %>
  </p>
<% end %>
